<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/black_bkg_box">
    
     <TextView
        android:id="@+id/host_game_cap"
        android:layout_width="match_parent"
        android:layout_height="40dp"   
        android:background="#0066CC"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="Host Game" />
     <TextView
        android:id="@+id/this_dev_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"   
        android:background="#003300"
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="This Device Name:" />
     <TextView
        android:id="@+id/host_showme_prmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:lines="3"  
        android:gravity="start"
        android:background="#003300"
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="Make this device visible to opponent (You may skip this step for paired devices)" />
     <LinearLayout
     	android:orientation="horizontal"
     	android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
     
     <Button
		android:id="@+id/btn_cancel"
		android:text="Skip It"
		android:textColor="#FFFFFF"
		android:textSize="18sp"
		android:layout_margin="20dp"
		android:layout_width="100dp"
		android:layout_height="50dp"
		
		android:background="@drawable/mybutt_custom"
		android:shadowColor="#666699"
		android:shadowDx="1.0"
		android:shadowDy="1.0"
		android:onClick="onSkip"/>
     
     <Button 
		android:id="@+id/btn_showme"
		android:text="Show Me"
		android:textColor="#FFFFFF"
		android:textSize="18sp"
		android:layout_margin="20dp"
		android:layout_width="100dp"
		android:layout_height="50dp"
		
		android:background="@drawable/mybutt_custom"
		android:shadowColor="#666699"
		android:shadowDx="1.0"
		android:shadowDy="1.0"
		android:onClick="onShowMe"/>
    </LinearLayout>
 </LinearLayout>