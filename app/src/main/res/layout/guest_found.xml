<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/black_bkg_box">
    
    <TextView
        android:id="@+id/host_game_cap"
        android:layout_width="match_parent"
        android:layout_height="40dp"   
        android:background="#0066CC"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="Join Game" />

   <LinearLayout
     	android:orientation="horizontal"
     	android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/join_game2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"   
        android:background="#003300"
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="Nearby Devices:" />
    <ProgressBar
         android:id="@+id/progressBar2"
         style="@android:style/Widget.ProgressBar.Small"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
         android:layout_marginStart="30dp" 
         android:layout_marginEnd="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginLeft="20dp"/>
    </LinearLayout>
    
    <ListView
        android:id="@+id/found_devs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:minHeight="12dp"
        android:stackFromBottom="false" >
    </ListView>  
    <LinearLayout
     	android:orientation="horizontal"
     	android:layout_width="wrap_content"
    	android:layout_height="wrap_content">

    
     <Button
		android:id="@+id/cancel"
		android:text="Cancel"
		android:textColor="#FFFFFF"
		android:textSize="18sp"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="20dp"
		android:layout_marginLeft="80dp"
		android:layout_marginRight="80dp"
		android:layout_width="100dp"
		android:layout_height="50dp"
		android:background="@drawable/mybutt_custom"
		android:shadowColor="#666699"
		android:shadowDx="1.0"
		android:shadowDy="1.0"
		android:onClick="onCancel"/>
    </LinearLayout>
    
       
  </LinearLayout>