<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/black_bkg_box">
    
    <Button
		android:id="@+id/host_game"
		android:text="Host Game"
		android:textColor="#FFFFFF"
		android:textSize="18sp"
		android:layout_margin="20dp"
		android:layout_width="200dp"
		android:layout_height="50dp"
		android:layout_gravity="center"
		android:background="@drawable/mybutt_custom"
		android:shadowColor="#666699"
		android:shadowDx="1.0"
		android:shadowDy="1.0"
		android:onClick="onHostGame"
		
/>
    <Button
		android:id="@+id/join_game"
		android:text="Join Game"
		android:textColor="#FFFFFF"
		android:textSize="18sp"
		android:layout_margin="20dp"
		android:layout_width="200dp"
		android:layout_height="50dp"
		android:layout_gravity="center"
		android:background="@drawable/mybutt_custom"
		android:shadowColor="#666699"
		android:shadowDx="1.0"
		android:shadowDy="1.0"
		android:onClick="onJoinGame"
/>
    
  </LinearLayout>